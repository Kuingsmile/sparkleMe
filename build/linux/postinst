#!/bin/bash

if type update-alternatives 2>/dev/null >&1; then
    # Remove previous link if it doesn't use update-alternatives
    if [ -L '/usr/bin/sparkleme' -a -e '/usr/bin/sparkleme' -a "`readlink '/usr/bin/sparkleme'`" != '/etc/alternatives/sparkleme' ]; then
        rm -f '/usr/bin/sparkleme'
    fi
    update-alternatives --install '/usr/bin/sparkleme' 'sparkleme' '/opt/sparkleme/sparkleme' 100 || ln -sf '/opt/sparkleme/sparkleme' '/usr/bin/sparkleme'
else
    ln -sf '/opt/sparkleme/sparkleme' '/usr/bin/sparkleme'
fi

sed -i 's/Name=sparkleme/Name=SparkleMe/' '/usr/share/applications/sparkleme.desktop'

chmod 4755 '/opt/sparkleme/chrome-sandbox' || true
chmod +sx /opt/sparkleme/resources/sidecar/mihomo
chmod +sx /opt/sparkleme/resources/sidecar/mihomo-alpha

if [ -d '/opt/sparkleme/resources/files/sub-store-frontend' ]; then
    chmod -R go-w '/opt/sparkleme/resources/files/sub-store-frontend' 2>/dev/null || true
fi

if hash update-mime-database 2>/dev/null; then
    update-mime-database /usr/share/mime || true
fi

if hash update-desktop-database 2>/dev/null; then
    update-desktop-database /usr/share/applications || true
fi
